<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PaqueteFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paquetes Ceramic Pro"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="1dp"
                app:strokeColor="@color/grayBlack"
                app:cardElevation="10dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="25dp"
                            android:text="PAQUETE DE ORO"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:text="Garantía de por vida"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:layout_margin="10dp"
                            android:text="El paquete Gold consta de 4 capas de Ceramic Pro 9H aplicadas a la pintura del vehículo, brindando protección permanente con garantía de por vida. Se agrega una capa adicional de protección a las áreas expuestas, incluidos el parabrisas y las ruedas."
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="INCLUYE"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="18dp"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:text="4 capas de 9H"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:text="1 capa de capa superior"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:text="1 Capa de 9H sobre plásticos"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:text="1 capa de rueda y calibre en las caras de las ruedas"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:text="1 capa de vidrio en el parabrisas"
                            android:fontFamily="@font/montserrat"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contratar"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="1dp"
                app:strokeColor="@color/grayBlack"
                app:cardElevation="10dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="25dp"
                            android:text="PAQUETE PLATA"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:text="Garantía de 5 años"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:layout_margin="10dp"
                            android:text="El Paquete Plata incluye 1 capa de Ceramic Pro 9H aplicada sobre la pintura del vehículo, brindando protección contra los elementos y una garantía de 5 años. Se agrega una capa protectora adicional a otras áreas, incluidos el parabrisas y las ruedas."
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="INCLUYE"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="18dp"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:text="1 capa de 9H"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:text="1 capa de capa superior"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:text="1 Capa de 9H sobre plásticos"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:text="1 capa de rueda y calibre en las caras de las ruedas"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:text="1 capa de vidrio en el parabrisas"
                            android:fontFamily="@font/montserrat"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contratar"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="1dp"
                app:strokeColor="@color/grayBlack"
                app:cardElevation="10dp"
                android:layout_marginBottom="50dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="25dp"
                            android:text="PAQUETE BRONCE"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:text="Garantía de 2 años"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:fontFamily="@font/montserrat"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:layout_margin="10dp"
                            android:text="El Paquete Bronce consta de 1 capa de Ceramic Pro Top Coat aplicada sobre la pintura del vehículo. Este recubrimiento protege contra rayones leves y proporciona un hermoso acabado brillante con una garantía de 2 años. Se agrega una capa protectora adicional a otras áreas, incluidos el parabrisas y las ruedas."
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="INCLUYE"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="18dp"
                            android:fontFamily="@font/montserrat"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:layout_margin="10dp"
                            android:text="1 capa de capa superior"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:layout_margin="10dp"
                            android:text="1 Capa de Top Coat sobre plásticos y llantas"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:layout_margin="10dp"
                            android:text="1 Capa de Top Coat sobre plásticos"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:layout_margin="10dp"
                            android:text="1 capa de vidrio en el parabrisas"
                            android:fontFamily="@font/montserrat"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contratar"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>